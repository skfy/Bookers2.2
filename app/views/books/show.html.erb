<!DOCTYPE html>
 <body>
  <main>
    <div class="container px-5 px-sm-0">
     <div class="row">
      <div class="col-md-3">
       <h2>User info</h2>
       <%= attachment_image_tag current_user, :profile_image, :fill, 63, 63, fallback: "no_image.jpg" %>
        <table class="table">
         <tbody>
          <tr></tr>
          <tr>
           <th>name</th>
           <th><%= @user.name %></th>
          </tr>
          <tr>
           <th>introduction</th>
           <th><%= @user.introduction %></th>
          </tr>
         </tbody>
        </table>
         <div class="row">
          <%= link_to "", edit_user_path(@user), class:"fas fa-user-cog" %>
         </div>
          <h2 class="mt-3">New book</h2>
          <%= form_with model: @book, local:true do |f| %>
           <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title %>
           </div>
           <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body %>
           </div>
           <div class="form-group">
            <%= f.submit 'Create Book' %>
           </div>
          <% end %>
      </div>
       <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
         <table class="table">
          <tbody>
            <tr>
             <td><%= image_tag("no_image.jpg") %></td>
             <td><%= @book.title %></td>
             <td><%= @book.body %></td>
             <% if @user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book) %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
             <% end %>
            </tr>
          </tbody>
         </table>
       </div>
     </div>
    </div>
  </main>
 </body>